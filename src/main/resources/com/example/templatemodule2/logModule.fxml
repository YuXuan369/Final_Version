<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.templatemodule2.loginController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" height="400.0" stroke="BLACK" strokeType="INSIDE" width="600.0">
         <fill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.42763158679008484" green="0.42763158679008484" blue="0.42763158679008484" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.006200000178068876" green="0.12945324182510376" blue="0.3100000023841858" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </fill>
      </Rectangle>
      <Button fx:id="logButton" layoutX="277.0" layoutY="246.0" mnemonicParsing="false" onAction="#loginButtonPushed" text="Login" />
      <Text fill="WHITE" layoutX="121.0" layoutY="84.0" strokeType="OUTSIDE" strokeWidth="0.0" text="sample name">
         <font>
            <Font name="Candara" size="64.0" />
         </font>
      </Text>
      <TextField fx:id="passTextBox" layoutX="225.0" layoutY="200.0" onAction="#onPassAction" onMouseClicked="#onPassMouseClicked" onMouseEntered="#passMouseEnter" onMouseExited="#passMouseExit" text="Password" />
      <TextField fx:id="userTextBox" layoutX="225.0" layoutY="147.0" onMouseClicked="#onUserMouseClick" onMouseEntered="#userMouseEnter" onMouseExited="#userMouseExit" text="Username" />
   </children>
</AnchorPane>
